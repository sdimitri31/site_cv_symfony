{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block bodyTitle %}Inscription{% endblock %}

{% block body %}
    {% if isRegistrationEnabled is defined and isRegistrationEnabled == false %}
        <div class="alert alert-warning">Inscriptions ferm√©es</div>
    {% else %}
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}

        {{ form_row(registrationForm.email) }}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-lg btn-primary mt-3">S'inscrire</button>
        {{ form_end(registrationForm) }}
    {% endif %}
{% endblock %}
